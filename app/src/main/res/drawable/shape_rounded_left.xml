<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base solid background -->
    <item>
        <shape>
            <solid android:color="#000" /> <!-- Background color -->
        </shape>
    </item>

    <!-- Overlay to cut out the right concave corners -->
    <item>
        <shape>
            <solid android:color="@android:color/white" /> <!-- Overlay color (matches the background of the container) -->
            <corners
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="16dp"
                android:topLeftRadius="0dp"
                android:topRightRadius="16dp" />
        </shape>
    </item>
</layer-list>
